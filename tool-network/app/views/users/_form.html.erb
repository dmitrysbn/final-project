<%= form_for user do |f| %>
  <div class="field">
     <%= f.label :name %><br />
     <%= f.text_field :name %>
   </div>

  <div class="field">
     <%= f.label :email %><br />
     <%= f.email_field :email %>
  </div>

  <div class="field">
     <%= f.label :password %><br />
     <%= f.password_field :password %>
  </div>

  <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :neighbourhood %><br />
    <%= f.collection_select(:neighbourhood, Neighbourhood.all.order(:name), :id, :name, {:prompt => true}) %>
  </div>

  <div>
    <%= f.label :profile_photo %>
    <%= f.file_field :avatar, multiple: false %>
  </div>

  <div class="field">
     <%= f.submit %>
  </div>

<% end %>
