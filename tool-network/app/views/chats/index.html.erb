<h1>Chats</h1>
<% @chats.each do |chat| %>
  <div class=“chats”>
   <% if chat.tool.owner_images[0] %>
     <%= image_tag("/owner_images/#{chat.tool.owner_images[0].file_name}", size: "120x100", alt: "No Image") %>
   <% end %>
   <p><%= link_to(chat.tool.name, edit_chat_path(chat)) %></p>
   <p>From: <%= chat.user.name %></p>
   <hr>
  </div>
<% end %>
