
<h2>Browse by Neighbourhood:</h2>

<div class="container">
  <div class="row">
  <% @neighbourhoods.each do |nbhd| %>
      <div class="col-md-3">

        <%= link_to(image_tag(nbhd.nbhd_image.url, border: 0, class: "nbhd-image", style: "width: 350px; height: 220px; margin-bottom: 5px;"), neighbourhood_url(nbhd)) %>

    </div>
  <% end %>
  </div>
</div>
