<h2><%= @neighbourhood.name %></h2>

<h4>Popular tools in <%= @neighbourhood.name %>:</h4>
<ul>
  <% @neighbourhood.tools.each do |tool| %>
    <li>
      <%= link_to("#{tool.name}", tool_url(tool)) %>
    </li>
  <% end %>
</ul>

<h4>Users in <%= @neighbourhood.name %>:</h4>
<ul>
  <% @users_in_neighbourhood.each do |user| %>
    <li>
      <%= user.name %>
    </li>
  <% end %>
</ul>

<div id="map">
</div>

<script>
function initMap() {
  var centerOfMap = {lat: <%= @lat %>, lng: <%= @lng %>};

  var map = new google.maps.Map(
    document.querySelector('#map'), {
    zoom: 14,
    center: centerOfMap
  });

  var coordinates = <%= @coords %>

  for (var i = 0; i < coordinates.length; i++) {
    var marker = new google.maps.Marker({
      position: {
        lat: coordinates[i][0],
        lng: coordinates[i][1]
      },
      map: map
    })
  }

  // var rectangle = new google.maps.Rectangle({
  //   strokeColor: '#FF0000',
  //   strokeOpacity: 0.8,
  //   strokeWeight: 2,
  //   fillColor: '#FFE180',
  //   fillOpacity: 0.5,
  //   map: map,
  //   bounds: {
  //     north: <%= @north %>,
  //     south: <%= @south %>,
  //     east: <%= @east %>,
  //     west: <%= @west %>
  //   }
  // });

  var circle = new google.maps.Circle({
    strokeColor: '#FF0000',
    strokeOpacity: 0.8,
    strokeWeight: 2,
    fillColor: '#FFE180',
    fillOpacity: 0.5,
    map: map,
    center: centerOfMap,
    radius: (<%= (@north - @south) / 2 %>) * 150000
  })
}
</script>

<script async defer  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA4smff7b389AgWQAZkI1CqrR2nB7cs0xM&callback=initMap">
</script>
