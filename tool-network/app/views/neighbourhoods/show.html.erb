<h2><%= @neighbourhood.name %></h2>

<h4>Popular tools in <%= @neighbourhood.name %>:</h4>
<ul>
  <% @neighbourhood.tools.each do |tool| %>
    <li>
      <%= link_to("#{tool.name}", tool_url(tool)) %>
    </li>
  <% end %>
</ul>

<h4>Users in <%= @neighbourhood.name %>:</h4>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.name %>
    </li>
  <% end %>
</ul>

<div id="map">
</div>

<script>
function initMap() {
  var postalCode = {lat: <%= @lat %>, lng: <%= @lng %>};
  var postalCode2 = {lat: (<%= @lat %> + 0.001), lng: (<%= @lng %> + 0.001)};

  var map = new google.maps.Map(
    document.querySelector('#map'), {
    zoom: 13,
    center: postalCode
  });

  var locations = <%= @locations.size %>

  for (var i = 0; i < locations; i++) {
    console.log("ok");
    var marker = new google.maps.Marker({
      position: postalCode2,
      map: map
    })
  }

  var marker = new google.maps.Marker({
    position: postalCode,
    map: map
  });

  var rectangle = new google.maps.Rectangle({
    strokeColor: '#FF0000',
    strokeOpacity: 0.8,
    strokeWeight: 2,
    fillColor: '#FF0000',
    fillOpacity: 0.35,
    map: map,
    bounds: {
      north: <%= @north %>,
      south: <%= @south %>,
      east: <%= @east %>,
      west: <%= @west %>
    }
  });
}
</script>

