<%= form_for(@tool) do |f| %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div>
  <%= f.label :loan_length %>
  <%= f.number_field :loan_length %>
</div>

<div>
  <%= f.label :condition %>
  <%= f.number_field :condition %>
</div>

<div>
  <%= f.submit %>
</div>

<% end %>
