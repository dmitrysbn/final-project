<div class="container">

  <h3>Log In</h3>

  <%= form_for :session, url: login_path do |f| %>

    <div class='field'>
      <%= f.label :email %>  <br />
      <%= f.email_field :email %>
    </div>
    <div class='field'>
      <%= f.label :password %>  <br />
      <%= f.password_field :password %>
    </div>
      <br />
    <div class='field'>
      <%= f.submit 'Login' %>
    </div>
  <% end %>
</div>
