<div class="container">
    
  <%= form_for @user do |f| %>
    <div class="field">
       <%= f.label :name %><br />
       <%= f.text_field :name %>
     </div>

    <div class="field">
       <%= f.label :email %><br />
       <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :postal_code %><br />
      <%= f.text_field :postal_code %>
    </div>

    <div class="field">
      <%= f.label :photo %><br />
      <%= f.text_field :photo %>
    </div>

    <div class="field">
       <%= f.submit %>
    </div>

  <% end %>

</div>
